<!-- Reservation Start -->
<div class="container-xxl py-5 px-0 wow fadeInUp" data-wow-delay="0.1s">
    <div class="row g-0">
        <div class="col-md-6">
            <div class="video">
                <button type="button" class="btn-play" data-bs-toggle="modal" data-src="https://www.youtube.com/embed/DWRcNpR6Kdc" data-bs-target="#videoModal">
                    <span></span>
                </button>
            </div>
        </div>
        <div class="col-md-6 bg-dark d-flex align-items-center">
            <div class="p-5 wow fadeInUp" data-wow-delay="0.2s">
                <h5 class="section-title ff-secondary text-start text-primary fw-normal">Reservation</h5>
                <h1 class="text-white mb-4">Book A Table Online</h1>
                <form method="post">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <label asp-for="Reservation.Name"></label>
                                <input type="text" class="form-control" asp-for="Reservation.Name">

                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-control">
                                <label asp-for="Reservation.Email"></label>
                                <input type="email" class="form-control text-dark" asp-for="Reservation.Email">

                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating date" id="date3" data-target-input="nearest">
                                <label asp-for="Reservation.DateTime"></label>
                                <input asp-for="Reservation.DateTime" class="form-control" step="3600"/>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <label asp-for="Reservation.People"></label>
                                <input type="number" class="form-control text-dark" asp-for="Reservation.People">
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <label asp-for="Reservation.SpecialRequest"></label>
                                <textarea class="form-control" asp-for="Reservation.SpecialRequest" style="height: 100px"></textarea>

                            </div>
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary w-100 py-3" type="submit">Book Now</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>
