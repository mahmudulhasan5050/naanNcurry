<div class="container-xxl py-5">

<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Create Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>                                       
        <div class="mb-3">
            <label asp-for="Buffet.Name"></label>
            <input asp-for="@Model.Buffet.Name" type="text" class="form-control" />
            <span asp-validation-for="Buffet.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Buffet.Description"></label>
            <input asp-for="@Model.Buffet.Description" type="text" class="form-control" />
            <span asp-validation-for="Buffet.Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Buffet.ImageUrl"></label>
            <input type="file" id="uploadBox" name="file" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Buffet.ActiveMenu"></label>
            <select asp-for="@Model.Buffet.ActiveMenu" type="text" class="form-control">
                <option value="yes">Yes</option>
                <option value="no">No</option>
            </select>
            <span asp-validation-for="Buffet.ActiveMenu" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-page="Index" class="btn btn-secondary" style="width:150px">Back to List</a>

    </div>

</form>
</div>